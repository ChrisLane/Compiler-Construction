bisection (f, a, b, tol, nmax) {
    int n = 1;

    while (n <= nmax) do {
        int c = a + b;
        c = c / 2;

        int fc = f(c);
        if (fc == 0 || (b - a) / 2 <= tol) do {
            return c
        } else {};

        n = n + 1;
        
        int fa = f(a);
        if (fc == fa) do {
            a = c
        } else {
            b = c
        }
    }
}
